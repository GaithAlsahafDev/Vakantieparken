<Window x:Class="VakantieparkenUI.ReservatiesZoekenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Reservaties Zoeken" WindowState="Maximized" Width="1501" Height="730">
    <Grid>
        <TabControl x:Name="TabControl" Margin="10,10,10,10">

            <TabItem Header="Zoek op Naam van Klant">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="33.56"/>
                        <ColumnDefinition Width="166.44"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Voer naam van Klant in:" Grid.Row="0" Grid.Column="0" Margin="-1,19,33,9" Grid.ColumnSpan="2" />
                    <TextBox x:Name="KlantNaamTextBox" Height="25" Grid.Row="0" Margin="18,20,10,0" Grid.Column="1" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                    <Button Content="Controle" Grid.Row="0" Height="25" Grid.Column="3" Click="ControleerKlant_Click" Margin="5,20,28,0" VerticalAlignment="Top"/>
                    <DataGrid x:Name="KlantenDataGrid" Margin="5,5,0,5" Grid.Row="0" Grid.Column="4" SelectionChanged="KlantenDataGrid_SelectionChanged" HorizontalAlignment="Left" Width="350" Height="100"/>
                    <TextBlock Text="Gevonden reservaties:" Margin="-1,75,11,335" Grid.Row="2" Grid.Column="0" />
                    <DataGrid x:Name="ReservatiesDataGrid" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" AutoGenerateColumns="False" Margin="30,110,0,96" HorizontalAlignment="Left" IsEnabled="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Reservatie id" Binding="{Binding ReservatieID}" Width="100"/>
                            <DataGridTextColumn Header="Start datum" Binding="{Binding StartDatum, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                            <DataGridTextColumn Header="Eind datum" Binding="{Binding EindDatum, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                            <DataGridTextColumn Header="Park naam" Binding="{Binding ParkNaam}" Width="150"/>
                            <DataGridTextColumn Header="Park Locatie" Binding="{Binding ParkLocatie}" Width="150"/>
                            <DataGridTextColumn Header="Huis id" Binding="{Binding HuisID}" Width="100"/>
                            <DataGridTextColumn Header="Huis adres" Binding="{Binding HuisAdres}" Width="200"/>
                            <DataGridTextColumn Header="Huis capaciteit" Binding="{Binding HuisCapaciteit}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Terug naar Startpagina" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Margin="15,0,445,0" Click="TerugNaarStartpagina_TabItemKlant_Click" Height="31" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="Zoek op Park en Periode">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="123*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Height="25" Text="Zoek op Park en Periode:" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="2" Height="25" Text="Gevonden reservaties:" Margin="17,46,150,16"/>
                    <ComboBox x:Name="ParkComboBox" Height="25" Margin="54,20,46,26" Grid.Row="1" Grid.Column="0" Width="200" />
                    <TextBlock Text="Van:" Height="25" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0"/>
                    <DatePicker x:Name="StartDatumPicker" Height="25" Grid.Row="1" Grid.Column="2" Width="140" Margin="30,23,30,23"/>
                    <TextBlock Text="Tot:" VerticalAlignment="Center" Height="25" Grid.Row="1" Grid.Column="3" Margin="10,0,10,0"/>
                    <DatePicker x:Name="EindDatumPicker" Grid.Row="1" Grid.Column="4" Height="25" Width="140" Margin="30,23,30,23"/>
                    <Button Content="Zoeken" Grid.Row="1" Grid.Column="4" Height="25" Click="ReservatieZoekenOpParkEnPeriode_Click" Margin="200,28,0,18" Grid.ColumnSpan="2"/>
                    <DataGrid x:Name="ReservatiesOpParkEnPeriodeDataGrid" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" AutoGenerateColumns="False" Margin="0,9,0,96" HorizontalAlignment="Center">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Reservatie id" Binding="{Binding ReservatieID}" Width="100"/>
                            <DataGridTextColumn Header="Start datum" Binding="{Binding StartDatum, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                            <DataGridTextColumn Header="Eind datum" Binding="{Binding EindDatum, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                            <DataGridTextColumn Header="Klant id" Binding="{Binding KlantID}" Width="100"/>
                            <DataGridTextColumn Header="Klant naam" Binding="{Binding KlantNaam}" Width="100"/>
                            <DataGridTextColumn Header="Huis id" Binding="{Binding HuisID}" Width="100"/>
                            <DataGridTextColumn Header="Huis adres" Binding="{Binding HuisAdres}" Width="200"/>
                            <DataGridTextColumn Header="Huis capaciteit" Binding="{Binding HuisCapaciteit}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Terug naar Startpagina" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="4" Margin="200,16,422,0" Click="TerugNaarStartpagina_TabItemParkEnPeriode_Click" Height="31" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>