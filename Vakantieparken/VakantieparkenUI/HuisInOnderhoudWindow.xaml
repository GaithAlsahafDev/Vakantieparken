<Window x:Class="VakantieparkenUI.HuisInOnderhoudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VakantieparkenUI"
        mc:Ignorable="d"
        Title="Huis in Onderhoud Plaatsen" WindowState="Maximized" Width="1216" Height="798">
    <Grid>
        <StackPanel Margin="20">
            <!-- اختيار الحديقة -->
            <TextBlock Text="Kies een Park:" Margin="20,0,0,10"/>
            <ComboBox x:Name="ParkComboBox" Width="300" SelectionChanged="ParkComboBox_SelectionChanged"/>

            <!-- اختيار المنزل -->
            <TextBlock Text="Kies een Huis:" Margin="20,20,0,10"/>
            <ComboBox x:Name="HuisComboBox" Width="300" IsEnabled="False" SelectionChanged="HuisComboBox_SelectionChanged"/>

            <!-- عرض الحجوزات -->
            <TextBlock Text="Gevonden Reservaties:" Margin="20,20,0,10"/>
            <DataGrid x:Name="ReservatiesDataGrid" Width="1100" Height="466" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ReservatieID" Binding="{Binding Id}" Width="100"/>
                    <DataGridTextColumn Header="StartDatum" Binding="{Binding StartDatum, StringFormat=\{0:dd/MM/yyyy\}}" Width="150"/>
                    <DataGridTextColumn Header="EindDatum" Binding="{Binding EindDatum, StringFormat=\{0:dd/MM/yyyy\}}" Width="150"/>
                    <DataGridTextColumn Header="KlantID" Binding="{Binding Klant.Id}" Width="100"/>
                    <DataGridTextColumn Header="KlantNaam" Binding="{Binding Klant.Naam}" Width="200"/>
                    <DataGridTextColumn Header="KlantAdres" Binding="{Binding Klant.Adres}" Width="300"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- الأزرار -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Huis in Onderhoud Plaatsen" Width="200" Height="40" Margin="0,0,20,0" Click="PlaatsInOnderhoud_Click"/>
                <Button Content="Terug naar Startpagina" Width="200" Height="40" Click="TerugNaarStartpagina_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
