<Window x:Class="VakantieparkenUI.NieuweReservatieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VakantieparkenUI"
        mc:Ignorable="d"
        Title="Nieuwe Reservatie Maken" WindowState="Maximized" Width="1209" Height="740">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Klant naam section -->
        <Grid Grid.Row="0" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Klant naam:" VerticalAlignment="Top" Margin="5" Grid.Column="0" />
            <TextBox x:Name="KlantNaamTextBox" VerticalAlignment="Top" Margin="5" Height="25" Grid.Column="1"/>
            <Button Content="Controle" VerticalAlignment="Top" Width="100" Height="25" Margin="5" Grid.Column="2" Click="ControleerKlant_Click"/>
            <DataGrid x:Name="KlantenDataGrid" Margin="5" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="350" Height="100" SelectionChanged="KlantenDataGrid_SelectionChanged"/>
            <TextBlock VerticalAlignment="Top" Margin="368,10,41,0" Grid.Column="3" Height="20" Foreground="Black" FontWeight="Bold" Text="* Je moet eerst een klant selecteren voordat je een nieuwe reservatie kunt aanmaken." />
        </Grid>

        <!-- TabControl -->
        <TabControl Grid.Row="1" Margin="0,10,0,10">
            <!-- TabItem 1: Zoek op Locatie -->
            <TabItem Header="kies de park op Locatie">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="52.2"/>
                        <ColumnDefinition Width="46.887"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Locatie combobox -->
                    <TextBlock Text="Locatie:" Grid.Column="0" VerticalAlignment="Center" Margin="5,0,5,0" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="LocatieComboBox" Grid.Row="0" Grid.Column="2" Margin="5,5,5,5" SelectionChanged="LocatieComboBox1_SelectionChanged" IsEnabled="False"/>

                    <!-- Park combobox -->
                    <TextBlock Text="Park:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="5,5,5,0" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="ParkComboBox1" SelectionChanged="ParkComboBox1_SelectionChanged" Grid.Row="1" Grid.Column="2" Margin="5,5,5,0" IsEnabled="False" VerticalAlignment="Top"/>

                    <!-- Begin datum picker -->
                    <TextBlock Text="Begin datum:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="5,5,5,0" Grid.ColumnSpan="2"/>
                    <DatePicker x:Name="BeginDatumPicker1" Grid.Row="2" Grid.Column="2" Margin="5,5,5,0" VerticalAlignment="Top"/>

                    <!-- Einddatum picker -->
                    <TextBlock Text="Einddatum:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" Margin="5,5,5,0" Grid.ColumnSpan="2"/>
                    <DatePicker x:Name="EindDatumPicker1" Grid.Row="3" Grid.Column="2" Margin="5,5,5,0" VerticalAlignment="Top"/>

                    <!-- Aantal personen combobox -->
                    <TextBlock Text="Aantal personen:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" Margin="5,5,5,0" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="AantalPersonenComboBox1" Grid.Row="4" Grid.Column="2" Margin="5,5,5,0" IsEnabled="False" VerticalAlignment="Top"/>

                    <!-- Button for fetching huizen -->
                    <Button Content="Bekijk Beschikbare Huizen" Width="200" Margin="91,0,0,0" Grid.Row="5" Grid.Column="2" Click="HaalHuizenOp1_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                    <!-- Beschikbare huizen ListBox -->
                    <TextBlock Text="Beschikbare huizen:" Grid.Row="0" Grid.Column="3" Margin="10,0,0,0" VerticalAlignment="Top"/>
                    <DataGrid x:Name="HuizenListBox1" Grid.Row="1" Grid.Column="3" Grid.RowSpan="4" Margin="5,5,0,5" Height="200" AutoGenerateColumns="False" Width="300" HorizontalAlignment="Left" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Straat" Binding="{Binding Straat}" Width="Auto"/>
                            <DataGridTextColumn Header="Nummer" Binding="{Binding HuisNummer}" Width="Auto"/>
                            <DataGridTextColumn Header="Capaciteit" Binding="{Binding Capaciteit}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Buttons at the bottom -->
                    <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="3" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Nieuwe Reservatie Toevoegen" Width="200" Margin="10" Click="ReservatieToevoegen1_Click"/>
                        <Button Content="Terug naar Startpagina" Width="200" Margin="10" Click="TerugNaarStartpagina1_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TabItem 2: Zoek op Faciliteiten -->
            <TabItem Header="kies de park op Faciliteiten">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>


                    <ListBox x:Name="AlleFaciliteitenListBox" SelectionMode="Extended" Grid.Row="1" Grid.Column="0" Margin="5" Height="150" IsEnabled="False"/>

                    <StackPanel x:Name="VoegenButtons" Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="False">
                        <Button Content=">" Width="40" Click="VoegFaciliteitToeButton_Click" Margin="5"/>
                        <Button Content=">>" Width="40" Click="VoegAlleFaciliteitenToeButton_Click" Margin="5"/>
                        <Button Content="&lt;" Width="40" Click="VerwijderFaciliteitButton_Click" Margin="5"/>
                        <Button Content="&lt; &lt;" Width="40" Click="VerwijderAlleFaciliteitenButton_Click" Margin="5"/>
                    </StackPanel>
                    <TextBlock Text="Kies de gewenste faciliteiten :" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="5"/>
                    <ListBox x:Name="GeselecteerdeFaciliteitenListBox" SelectionMode="Extended" SelectionChanged="GeselecteerdeFaciliteitenListBox_SelectionChanged" Grid.Row="1" Grid.Column="2" Margin="5" Height="150" IsEnabled="False"/>

                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Park combobox -->
                        <TextBlock Text="Park:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="5"/>
                        <ComboBox x:Name="ParkComboBox2" SelectionChanged="ParkComboBox2_SelectionChanged" Grid.Row="1" Grid.Column="1" Margin="5" IsEnabled="False"/>

                        <!-- Begin datum picker -->
                        <TextBlock Text="Begin datum:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="5"/>
                        <DatePicker x:Name="BeginDatumPicker2" Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Top"/>

                        <!-- Einddatum picker -->
                        <TextBlock Text="Einddatum:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" Margin="5"/>
                        <DatePicker x:Name="EindDatumPicker2" Grid.Row="3" Grid.Column="1" Margin="5" VerticalAlignment="Top"/>

                        <!-- Aantal personen combobox -->
                        <TextBlock Text="Aantal personen:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" Margin="5"/>
                        <ComboBox x:Name="AantalPersonenComboBox2" Grid.Row="4" Grid.Column="1" Margin="5" VerticalAlignment="Top" IsEnabled="False"/>

                        <!-- Button for fetching huizen -->
                        <Button Content="Bekijk Beschikbare Huizen" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Width="200" Margin="5"
                        HorizontalAlignment="Center" VerticalAlignment="Top" Click="HaalHuizenOp2_Click"/>

                        <!-- Beschikbare huizen ListBox -->
                        <TextBlock Text="Beschikbare huizen:" Grid.Row="1" Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Top"/>
                        <DataGrid x:Name="HuizenListBox2" Grid.Row="2" Grid.Column="2" Grid.RowSpan="4" Height="200" Margin="5" AutoGenerateColumns="False" Width="300" HorizontalAlignment="Left">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Straat" Binding="{Binding Straat}" Width="Auto"/>
                                <DataGridTextColumn Header="Nummer" Binding="{Binding HuisNummer}" Width="Auto"/>
                                <DataGridTextColumn Header="Capaciteit" Binding="{Binding Capaciteit}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <!-- Buttons at the bottom -->
                    <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Nieuwe Reservatie Toevoegen" Width="200" Margin="10" Click="ReservatieToevoegen2_Click"/>
                        <Button Content="Terug naar Startpagina" Width="200" Margin="10" Click="TerugNaarStartpagina2_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
