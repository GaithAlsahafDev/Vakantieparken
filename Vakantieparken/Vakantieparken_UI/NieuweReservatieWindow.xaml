<Window x:Class="Vakantieparken_UI.NieuweReservatieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vakantieparken_UI"
        mc:Ignorable="d"
        Title="Nieuwe Reservatie Maken" Height="800" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Kies een Klant:" Margin="0,0,0,10"/>
            <ComboBox x:Name="KlantComboBox" Width="300"/>

            <TextBlock Text="Kies een Locatie:" Margin="20,20,0,10"/>
            <ComboBox x:Name="LocatieComboBox" Width="300" SelectionChanged="LocatieComboBox_SelectionChanged"/>

            <TextBlock Text="Kies een Faciliteit:" Margin="20,20,0,10"/>
            <ComboBox x:Name="FaciliteitComboBox" Width="300" IsEnabled="False" SelectionChanged="FaciliteitComboBox_SelectionChanged"/>

            <TextBlock Text="Kies een Park:" Margin="20,20,0,10"/>
            <ComboBox x:Name="ParkComboBox" Width="300" IsEnabled="False" SelectionChanged="ParkComboBox_SelectionChanged"/>

            <TextBlock Text="Kies een Datum (Van - Tot):" Margin="20,20,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <DatePicker x:Name="StartDatumPicker" Width="140" Margin="0,0,10,0"/>
                <DatePicker x:Name="EindDatumPicker" Width="140"/>
            </StackPanel>

            <TextBlock Text="Aantal Personen:" Margin="20,20,0,10"/>
            <ComboBox x:Name="AantalPersonenComboBox" Width="100"/>

            <TextBlock Text="Beschikbare Huizen:" Margin="20,20,0,10"/>
            <ListBox x:Name="HuizenListBox" Width="400" Height="200" IsEnabled="False"/>

            <Button Content="Nieuwe Reservatie Toevoegen" Margin="20,30,0,0" Width="200" Click="NieuweReservatieToevoegen_Click"/>
        </StackPanel>
    </Grid>
</Window>
