<Window x:Class="Vakantieparken_UI.GeaffecteerdeKlantenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vakantieparken_UI"
        mc:Ignorable="d"
        Title="Geaffecteerde Klanten" Height="450" Width="700">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Lijst van Geaffecteerde Klanten:" Margin="0,0,0,10" FontSize="16" FontWeight="Bold"/>
            <ListBox x:Name="KlantenListBox" Width="650" Height="300" SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="{Binding}" Width="500"/>
                            <Button Content="Verwijder" Width="100" Margin="10,0,0,0" Click="VerwijderKlant_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Terug naar Startpagina" Width="200" Height="40" Margin="0,20,0,0" Click="TerugNaarStartpagina_Click"/>
        </StackPanel>
    </Grid>
</Window>
