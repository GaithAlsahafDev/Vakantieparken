<Window x:Class="Vakantieparken_UI.HuisInOnderhoudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vakantieparken_UI"
        mc:Ignorable="d"
        Title="Huis in Onderhoud Plaatsen" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Kies een Park:" Margin="0,0,0,10"/>
            <ComboBox x:Name="ParkComboBox" Width="300" SelectionChanged="ParkComboBox_SelectionChanged"/>

            <TextBlock Text="Kies een Huis:" Margin="20,20,0,10"/>
            <ComboBox x:Name="HuisComboBox" Width="300" IsEnabled="False" SelectionChanged="HuisComboBox_SelectionChanged"/>

            <TextBlock Text="Gevonden Reservaties:" Margin="20,20,0,10"/>
            <ListBox x:Name="ReservatiesListBox" Width="500" Height="150" IsEnabled="False"/>

            <Button Content="Huis in Onderhoud Plaatsen" Width="200" Height="40" Margin="0,20,0,0" Click="PlaatsInOnderhoud_Click"/>
        </StackPanel>
    </Grid>
</Window>
